<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris">


    <ImageButton
    android:layout_width="128dp"
    android:layout_height="128dp"
        android:id="@+id/sendpin"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/cm"
        />
    <ImageButton
        android:layout_margin="7dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/drawer"
        android:background="@drawable/ic_menu_white_24dp" />
    <EditText android:id="@+id/pin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Code"
        android:inputType="numberPassword"
        android:layout_marginTop="46dp"
        android:textColor="@color/gris_clair"
        android:textColorHint="@color/gris_clair"
        android:layout_below="@+id/sendpin"
        android:layout_centerHorizontal="true" />


</RelativeLayout>